	"dependencies": {
		"dotenv": "^17.2.3"
	},
	"type": "module",
	"devDependencies": {
		"typescript": "^5.9.3",
		"@biomejs/biome": "^2.2.7",
		"@types/node": "^24.9.1",
		"jiti": "^2.6.1"
	}
}
